@page "/book/edit/{id:int}"
@using StudentManagment.Client.Services
@using StudentManagment.Shared.Models
@using StudentManagment.Shared.StudentRepository
@inject NavigationManager navigation;
@inject IJSRuntime JsRuntime
@rendermode InteractiveServer
@inject IBookRepository BookService;

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Update Book Details</h3>
            </div>
            <div class="card-body">
                <EditForm Model="book" OnValidSubmit="UpdateBook" FormName="updateBook">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Book Name</label>
                                    <InputText for="Name" class="form-control" @bind-Value="@book.Name" />
                                    <ValidationMessage For="()=>book.Name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Book Auther</label>
                                    <InputText for="Auther" class="form-control" @bind-Value="@book.Auther" />
                                    <ValidationMessage For="()=>book.Auther" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">No Of Copies</label>
                                    <InputNumber for="NoOfCopy" class="form-control" @bind-Value="@book.NoOfCopy" />
                                    <ValidationMessage For="()=>book.NoOfCopy" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Save Book</button>
                            <button type="button" @onclick="()=>Cancel()" class="btn btn-danger">Back to List</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
@code {

    [SupplyParameterFromForm]
    public Book book { get; set; } = new();


    [Parameter]
    public int id { get; set; }


    protected override async Task OnInitializedAsync()
    {
        await LoadBook();
    }
    public async Task LoadBook()
    {
        book = await BookService.GetByIdAsync(id);
    }
    protected async Task UpdateBook()
    {
        var result = await BookService.UpdateAsync(book);
        navigation.NavigateTo("/book-list");
    }
    public void Cancel()
    {
        navigation.NavigateTo("/book-list");
    }
}